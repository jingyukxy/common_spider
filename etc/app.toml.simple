[appconfig]
AppName = "ClusterTagEngine"
InternalServer = "127.0.0.1:9999"

# log config
[log]
FileName = "app.log"
AppId = 1
AppName = "TagEngine"
MaxCount = 30

[download]
DownloadPath = "/xxx/xx/go/xx/images"
DownloadSuffix = "jpg"
PrefixUrl = "https://xx.xx.com/images/"

#redis config
[redis]
Database = 0
Network = "tcp"
Address = "127.0.0.1:6379"
MaxIdle = 3
MaxActive = 100
IdelTimeout = 200
DialReadTimeout = 60
DialWriteTimeout = 60
DialConnectTimeout = 60

# database config
[dbconfig]
    [dbconfig.database]
        [dbconfig.database.default]
        ConnName = "default"
        ConnId = 1
        Driver = "mysql"
        ConnectionString = "xxx:xx@tcp(127.0.0.1:3306)/cluster_app"
        MaxOpenConnections=100
        MaxIdleConnections=3
        ConnMaxLifetime = 10

        [dbconfig.database.vod]
        ConnName = "vod"
        ConnId = 2
        Driver = "mysql"
        ConnectionString = "xx:xx@tcp(127.0.0.1:3306)/cluster_vod"
        MaxOpenConnections=200
        MaxIdleConnections=3
        ConnMaxLifetime = 10
#rabbitmq config
[rabbitmq]
# 连接字符串
RabbitMQURL="amqp://xx:xxx@127.0.0.1:5672"
# vhost
VHost="movie"
# 字符集
Locale="zh_CN"
# channel最大连接数
ChannelMax=32767
    [rabbitmq.exchanges]
        [rabbitmq.exchanges.movie]
        QueueName  = "qq_movie_item"
        RoutingKey = "qq_movie_item"
        ExchangeName = "amq.direct"
        ExchangeType = "direct"